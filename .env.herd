# ==============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT CONFIGURATION FOR HERD
# ==============================================================================
# This is your LOCAL development .env file for use with Laravel Herd
# To use this file, copy it to .env: cp .env.herd .env
# ==============================================================================

# ------------------------------------------------------------------------------
# APPLICATION SETTINGS
# ------------------------------------------------------------------------------
APP_NAME="Box Industries"
APP_ENV=local
APP_KEY=base64:YFNbbNxaym8TWgr6gvWWkva4Zeauf2BioMIzc5uLktw=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://box-industries.test

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# ------------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ------------------------------------------------------------------------------
# Herd uses MySQL with these default credentials
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=box_industries
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# ------------------------------------------------------------------------------
# SESSION & CACHE CONFIGURATION
# ------------------------------------------------------------------------------
# For local development, 'file' driver works great
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

CACHE_STORE=file
CACHE_PREFIX=

# ------------------------------------------------------------------------------
# QUEUE CONFIGURATION
# ------------------------------------------------------------------------------
# Use 'sync' for local development (processes immediately)
# Use 'database' if you want to test queue functionality
QUEUE_CONNECTION=sync
QUEUE_FAILED_DRIVER=database

# ------------------------------------------------------------------------------
# MAIL CONFIGURATION
# ------------------------------------------------------------------------------
# Use 'log' driver to see emails in storage/logs/laravel.log
# Or configure Mailtrap for testing emails
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@box-industries.test"
MAIL_FROM_NAME="${APP_NAME}"

# Alternative: Use Mailtrap for email testing
# MAIL_MAILER=smtp
# MAIL_HOST=sandbox.smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=your_mailtrap_username
# MAIL_PASSWORD=your_mailtrap_password
# MAIL_ENCRYPTION=tls

# ------------------------------------------------------------------------------
# LOGGING
# ------------------------------------------------------------------------------
# Use 'debug' level for local development to see everything
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ------------------------------------------------------------------------------
# BROADCASTING
# ------------------------------------------------------------------------------
BROADCAST_CONNECTION=log

# ------------------------------------------------------------------------------
# FILESYSTEM
# ------------------------------------------------------------------------------
FILESYSTEM_DISK=public

# ------------------------------------------------------------------------------
# VITE/ASSET CONFIGURATION
# ------------------------------------------------------------------------------
# Run 'npm run dev' for hot module replacement during development
VITE_APP_NAME="${APP_NAME}"

# ------------------------------------------------------------------------------
# INERTIA CONFIGURATION
# ------------------------------------------------------------------------------
# SSR not needed for local development
INERTIA_SSR_ENABLED=false

# ------------------------------------------------------------------------------
# SECURITY & MISCELLANEOUS
# ------------------------------------------------------------------------------
BCRYPT_ROUNDS=12

# ------------------------------------------------------------------------------
# DEVELOPMENT TOOLS
# ------------------------------------------------------------------------------
# These are helpful for local development debugging

# Enable query logging
# DB_QUERY_LOG=true

# Telescope (if installed)
# TELESCOPE_ENABLED=true

# ------------------------------------------------------------------------------
# EXTERNAL SERVICES (Optional - for local testing)
# ------------------------------------------------------------------------------
# Add any API keys for development/testing here

# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_HOST=
# PUSHER_PORT=443
# PUSHER_SCHEME=https
# PUSHER_APP_CLUSTER=mt1

# ==============================================================================
# SETUP INSTRUCTIONS:
# ==============================================================================
# 1. Copy this file to .env: cp .env.herd .env
# 2. Create the database: mysql -u root -e "CREATE DATABASE box_industries"
# 3. Run migrations: php artisan migrate
# 4. Seed database (optional): php artisan db:seed
# 5. Build assets: npm run dev
# 6. Visit: http://box-industries.test
# ==============================================================================
